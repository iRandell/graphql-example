{
  "scripts": {
    "start": "npm-run-all --parallel start:client start:server",
    "start:server": "npm run start --prefix ./package/server",
    "start:client": "npm run start --prefix ./package/client",
    "eslint": "eslint --ext .js,.ts --report-unused-disable-directives",
    "eslint:root": "npm run eslint ./",
    "eslint:root:fix": "npm run eslint:root -- -- --fix"
  },
  "devDependencies": {
    "@yellfage/eslint-config-typescript": "^1.0.0-beta.1",
    "commitlint": "^17.0.3",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1"
  }
}
